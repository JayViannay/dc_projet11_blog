{% extends 'base.html.twig' %}

{% block title %} - cart{% endblock %}

{% block body %}
<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Reference</th>
        <th scope="col">Qty</th>
        <th scope="col">Price</th>
        <th scope="col">Total</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    {% for item in cart %}
      <tr>
        <th scope="row">{{item.article.id}}</th>
        <td>{{item.article.title}}</td>
        <td>{{item.qty}}</td>
        <td>{{item.article.price}}</td>
        <td>{{item.qty * item.article.price}} $</td>
        <td><a href="{{ path('app_cart_delete', {'id': item.article.id}) }}">Delete to cart</a></td>
      </tr>
    {% endfor %}
    </tbody>
</table>
Total : {{total}} $
{% endblock %}
